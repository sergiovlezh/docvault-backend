{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runserver",
            "type": "shell",
            "command": "python ${workspaceFolder}/src/manage.py runserver 0.0.0.0:8000",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile and sync reqs",
            "type": "shell",
            "command": "pip-compile --output-file=requirements.txt requirements.in && pip-sync requirements.txt",
            "problemMatcher": [
                "$python"
            ]
        }
    ]
}