{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Launch",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/src/manage.py"
        },
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}