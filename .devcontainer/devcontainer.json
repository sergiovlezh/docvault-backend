{
    "name": "DocVault - Back",
    "dockerComposeFile": [
        "./docker-compose.dev.yml"
    ],
    "workspaceFolder": "/workspace",
    "service": "backend",
    "runServices": [
        "backend",
        "db"
    ],
    "shutdownAction": "stopCompose",
    "forwardPorts": [
        8000, // backend
        5432 // db
    ],
    "postStartCommand": {
        "runserver": "python /workspace/src/manage.py runserver 0.0.0.0:8000"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "charliermarsh.ruff",
                "mhutchie.git-graph",
                "GitHub.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "python.linting.ruffEnabled": true,
                "editor.formatOnSave": true,
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 1000,
                "python.formatting.provider": "ruff",
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "always"
                },
                "editor.rulers": [
                    80,
                    120
                ]
            }
        }
    }
}